.item-title{
  padding: 37rpx 20rpx 23rpx 20rpx;
  font-size: 28rpx;
  color: #888888;
}

.row{
  padding: 20rpx 20rpx;
  font-size: 34rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #ffffff;
  border-bottom: 1rpx #e5e5e5 solid;
  border-top: 1rpx #e5e5e5 solid;
}

.row-name{
  color: #1a1a1a;
  width: 140rpx;
  margin-right: 20rpx;
  line-height: 48rpx;
}

.row-value{
  color: #999999;
  text-align: right;
  width: 550rpx;
}