/* pages/empapp/finishplan/finishList.wxss */

.container {
  height: 100%;
  background-color: #f1f5f6;
  font-size: 32rpx;
}

useheader {
  height: 12%;
  z-index: 999;
}

.listView {
  height: 88%;
}

.listBox {
  margin: 10rpx 0;
  background-color: #fff;
}

.listHeader {
  padding: 10rpx;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 0 2px #e5e5e5;
}

.listBody {
  padding: 0 10rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.header {
  font-size: 35rpx;
  font-weight: 600;
}

.headerTxt {
  font-size: 30rpx;
  font-weight: 400;
}

.bodyTxt {
  font-size: 28rpx;
  font-weight: 100;
  margin: 6rpx 0;
}

.bodyBtn {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  background-color: #04c38e;
  border-radius:12rpx;
}
