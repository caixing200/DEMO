.code {
  width: 50rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.sao {
  width: 48rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.push-box {
  padding: 14rpx 20rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
}

.sao-box {
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
}

.sao-box text {
  font-size: 22rpx;
  width: 48rpx;
  text-align: center;
}

.code-box {
  padding: 12rpx 0;
  width: 230rpx;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}
.detail {
  position: relative
}
.detail-status {
  width: 120rpx;
  position: relative;
  text-align: center;
  vertical-align: middle;
}
.detail-status text{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  border-radius: 12rpx;
}

.detail view{
  margin-bottom: 0;
}
.detail-txt {
  overflow: hidden;
}

.detail-txt view {
  display: inline-block;
}

.detail-title {
  width: 20%;
  vertical-align: top;
}

.detail-content {
  width: 80%;
  vertical-align: bottom;
}

.detail-title-other {
  width: 27%;
}

.detail-content-other {
  width: 73%;
}
.item-people {
  border-bottom: 8rpx solid #e5e5e5;
}
.base {
  border: none;
  position: relative;
}
.cover {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.5)
}
.sub{
  position: relative;
}
.btn-box {
  position: relative;
}
.btnCover {
  position: absolute;
  width: 716rpx;
  height: 88rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.5)
}