/* pages/warn/index.wxss */
.container{
   width: 100%;
   height: 100vh;
   background-color: #f2f2f2;
}


.top {
background-color:#ffffff;
line-height:98rpx;
padding:0 90rpx;
display:flex;
flex-direction:row;
justify-content:space-between;
align-items:center;
position:relative;

}

.title{
   padding:20rpx;
  background-color:#ffffff;
  display:flex;
  flex-direction:row;
  justify-content:left;
  align-items:center;
  border-left:10rpx solid #1bc898;
  border-top:1rpx solid #e5e5e5;
  border-bottom:1rpx solid #e5e5e5;
  font-size:31rpx;
  font-weight:500;
  color:#1a1a1a;

}

.choose{
   background-color: #fff;
}

.choose-grids{
   padding: 50rpx;
   display: flex;
   flex-wrap: wrap;
   justify-content: space-around;
}

.reason-num{
  position:relative;
  left:200rpx;
}

.add-reason{
   margin: 19rpx 0;
   color: #04c38e;
   font-size: 26rpx;
   line-height: 58rpx;
   height: 58rpx;
   width: 180rpx;
   border: 1rpx solid #04c38e;
   border-radius: 15rpx; 
   display: flex;
   justify-content: center;
   position:relative;
   left:485rpx;
   bottom:36px;


}

.grids{
   width: 45%;
   height: 90rpx; 
   text-align: left;
  
}

.grids:first-child, .grids:nth-of-type(2){
   margin-top: 0;
}



.action .action-input{
   
   padding-left: 50rpx;
   background-color: #fff;
}

.action .action-input input{
   padding-bottom:20rpx;
   width:90%;
   font-size:30rpx;

}

.action .action-input input:first-child{
   border-bottom: 1px solid #ccc;
}